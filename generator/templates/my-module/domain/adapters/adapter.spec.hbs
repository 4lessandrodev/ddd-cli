import Adapter from '@modules/my-module/domain/adapters/adapter';
import modelMock from '@modules/my-module/domain/mock/model.mock';

describe('adapter', () => {
	
	const adapter = new Adapter();

	describe('success cases', () => {
		it('should build method to be defined', () => {
			const method = adapter.build;
			expect(method).toBeDefined();
		});
	});

	describe('failure cases', () => {
		it('should fail if method is not implemented', () => {
			const result = adapter.build(modelMock);
			expect(result.isFail()).toBeTruly();
		});
	});

});

